{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install",
    "nixpacksPlan": {
      "providers": [
        "..."
      ]
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "bun dev",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "scripts": {
    "drizzle-kit": "bun add -D drizzle-kit",
    "generate-migration": "bun drizzle-kit migrate",
    "migrate": "bun drizzle-kit generate --schema src/db/schemas/* --dialect sqlite"
  }
}
